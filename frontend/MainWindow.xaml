<Window x:Class="Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resume Search" Height="250" Width="600">
    <Grid>
        <TextBox x:Name="SexBox" Text="Sex" Foreground="Gray" Margin="10,10,10,0" VerticalAlignment="Top" Height="30"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Grid.ColumnSpan="3"/>
        <TextBox x:Name="ExperienceBox" Text="Experience" Foreground="Gray" Margin="10,50,10,0" VerticalAlignment="Top" Height="30"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Grid.ColumnSpan="3"/>
        <TextBox x:Name="SkillsBox" Text="Skills (comma-separated)" Foreground="Gray" Margin="10,90,10,0" VerticalAlignment="Top" Height="30"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Grid.ColumnSpan="3"/>

        <Button Content="Submit" Margin="10,130,10,0" VerticalAlignment="Top" Height="30" Click="SubmitButton_Click" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
